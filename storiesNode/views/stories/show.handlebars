<div class="row">
	<div class="col s12 m9">
		<h3>{{story.title}}
			<small>{{{editIcon story.user.id user.id story.id false}}}</small>
		</h3>
		<div class="card story">
			<div class="card-content">
				<span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
				{{{story.body}}}
			</div>
		</div>
		{{#if story.allowComments}}
		<div class="card">
			<div class="card-content">
				<span class="card-title">Comments</span>
				{{#if user}}
				<form action="/stories/comment/{{story.id}}" method="POST">
					<div class="input-field">
						<textarea name="commentBody" class="materialize-textarea"></textarea>
						<label for="commentBody">Add Comment</label>
					</div>
					<input type="submit" value="Submit" class="btn">
				</form>
				{{else}}
				Please <a href="/auth/google">login</a> to leave a comment
				{{/if}}
			</div>
		</div>
		{{#each story.comment}}
		<div class="card">
			<div class="card-content">
				<h5>{{commentBody}}</h5>
				<div class=" avatar">
					<img src="{{commentUser.image}}" alt="user" class="circle circle-small">
					<span class="title">{{commentUser.firstName}} {{commentUser.lastName}}</span>

				</div>
				<br>
				<small>Posted {{formatDate commentDate 'MMMM Do YYYY'}}</small>
			</div>
		</div>
		{{/each}}
		{{/if}}
	</div>
	<div class="col s12 m3">
		<div class="card center-align">
			<div class="card-content">
				<h5>Author:</h5>
				<span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
				<img src="{{story.user.image}}" class="circle responsive-img">
			</div>
			<div class="card-action">
				<a href="/stories/user/{{story.user.id}}" class="waves-effect waves-light btn-small">More {{story.user.firstName}}
					Stories</a>
			</div>
		</div>
	</div>
</div>