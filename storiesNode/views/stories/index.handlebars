<h1>Stories</h1>
<div class="row">
	{{#each stories}}
	<div class="col s12 m4">
		<div class="card">
			<div>
				{{#if user}}
				{{{editIcon user.id ../user.id id}}}
				{{/if}}
			</div>
			<div class="card-content center-align main-card">
				<h5>{{title}}</h5>
				<p class="story-text">{{ tags (truncate body 450)}}</p>
				<br>
				<div class=" avatar">
					<img src="{{user.image}}" alt="user" class="circle circle-small">
					<span class="title"><a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a> </span>

				</div>
			</div>
			<div class="card-action center-align">
				<a href="/stories/show/{{id}}" class="btn"><i class="fas fa-book-reader"></i> Read More</a>
			</div>
		</div>
	</div>
	{{else}}
	<p>No stories found</p>
	{{/each}}
</div>