<h1>Welcome <span class="user">{{user.firstName}}</span></h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Status</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each stories}}
		<tr>
			<td><a href="/stories/show/{{id}}">{{title}}</a> </td>
			<td>{{formatDate story.date 'MMMM Do YYYY'}}</td>
			<td><span class="dash-status">{{status}}</span></td>
			<td><a href="/stories/edit/{{id}}" class="btn btn-small orange accent-4 left-align"><i class="fas fa-pencil-alt fa-1x"></i>
					Edit</a>
				<form action="/stories/{{id}}?_method=DELETE" method="POST" id="delete-form">
					<input type="hidden" name="_method" value="DELETE">
					<button type="submit" class="btn btn-small red accent-4 "><i class="fas fa-trash-alt fa-1x"></i> Delete</button>
				</form>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
{{else}}
<p>You have not created any stories yet :(</p>
{{/if}}